<main class="d-flex flex-justify-center bg-gray min-h-screen">
  <div class="py-8 px-2 width-full">
    <header>
      <div>
        <%= embed_svg "logo-full-faded", class: "mx-auto width-full" %>
      </div>
      <h1 class="text-center h1"><%= title %></h1>
    </header>
    <div class="container-xs mt-3">
      <div class="Box p-4">
        <%= body %>
      </div>
      <% if footer %>
        <p class="f5 mt-2 text-center text-gray">
          <%= footer %>
        </p>
      <% end %>
    </div>
  </div>
</main>