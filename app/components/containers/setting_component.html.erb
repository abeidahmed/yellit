<%= render PageHeads::WithActionComponent.new do |component| %>
  <% component.with(:header) do %>
    <h1 class="h3"><%= project_name %></h1>
  <% end %>
  <% component.with(:action) do %>
    <a href="#" class="btn">
      <%= octicon "link-external" %>
      <span>View posts</span>
    </a>
  <% end %>
<% end %>
<div class="container-xl px-3 px-sm-4 px-lg-5">
  <div class="d-lg-flex gutter mt-5">
    <div class="col-lg-3 d-none d-lg-block">
      <%= render "app/settings/menu" %>
    </div>
    <div class="col-lg-9">
      <%= body %>
    </div>
  </div>
</div>