<markdown-toolbar data-controller="toggle" data-toggle-attribute-value="hidden" for="post-textarea" class="ml-n2 ml-lg-0 d-flex flex-items-center flex-justify-between flex-wrap">
  <div class="d-sm-none mr-3">
    <button data-action="click->toggle#toggle" data-md-button type="button" class="btn-octicon">
      <%= octicon "typography" %>
      <span class="dropdown-caret"></span>
    </button>
  </div>
  <div class="d-flex flex-items-center">
    <div class="d-none d-sm-flex flex-items-center mr-3">
      <md-header class="btn-octicon"><%= octicon "heading" %></md-header>
      <md-bold class="btn-octicon"><%= octicon "bold" %></md-bold>
      <md-italic class="btn-octicon"><%= octicon "italic" %></md-italic>
    </div>
    <div class="d-flex flex-items-center mr-3">
      <md-quote class="btn-octicon"><%= octicon "quote" %></md-quote>
      <md-code class="btn-octicon"><%= octicon "code" %></md-code>
      <md-link class="btn-octicon"><%= octicon "link" %></md-link>
      <md-image class="btn-octicon"><%= octicon "image" %></md-image>
    </div>
    <div class="d-none d-sm-flex flex-items-center mr-3">
      <md-unordered-list class="btn-octicon"><%= octicon "list-unordered" %></md-unordered-list>
      <md-ordered-list class="btn-octicon"><%= octicon "list-ordered" %></md-ordered-list>
      <md-task-list class="btn-octicon"><%= octicon "tasklist" %></md-task-list>
    </div>
    <div class="d-flex flex-items-center">
      <button type="button" data-md-button class="btn-octicon">
        <%= octicon "tag" %>
        <span class="dropdown-caret"></span>
      </button>
      <button type="button" data-md-button class="btn-octicon btn-octicon-danger">
        <%= octicon "trashcan" %>
      </button>
    </div>
  </div>
  <div data-toggle-target="content" class="d-flex d-sm-none width-full flex-items-center mr-3 mt-2" hidden>
    <div class="d-flex flex-items-center">
      <md-header class="btn-octicon"><%= octicon "heading" %></md-header>
      <md-bold class="btn-octicon"><%= octicon "bold" %></md-bold>
      <md-italic class="btn-octicon"><%= octicon "italic" %></md-italic>
    </div>
    <div class="d-flex flex-items-center">
      <md-unordered-list class="btn-octicon"><%= octicon "list-unordered" %></md-unordered-list>
      <md-ordered-list class="btn-octicon"><%= octicon "list-ordered" %></md-ordered-list>
      <md-task-list class="btn-octicon"><%= octicon "tasklist" %></md-task-list>
    </div>
  </div>
</markdown-toolbar>