<%= render Containers::FocussedComponent.new(title: "Create your account") do |component| %>
  <% component.with(:body) do %>
    <%= form_with model: @user do |form| %>
      <div class="form-group mt-0">
        <div class="form-group-header">
          <%= form.label :full_name %>
        </div>
        <div class="form-group-body">
          <%= form.text_field :full_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :email_address %>
        </div>
        <div class="form-group-body">
          <%= form.email_field :email_address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :password %>
        </div>
        <div class="form-group-body">
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <p class="f6 mt-1 text-gray">
          Make sure itâ€™s atleast 6 characters in length.
        </p>
      </div>
      <div>
        <%= form.submit "Create account", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <p class="f6 mt-3 text-gray mb-0">
      By creating an account you agree to the
      <a href="#">Terms of Service</a>.
    </p>
  <% end %>
  <% component.with(:footer) do %>
    Already have an account?
    <a href="#">Sign in</a>
  <% end %>
<% end %>
