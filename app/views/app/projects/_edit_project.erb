<section>
  <div class="Subhead">
    <div class="Subhead-heading">Change project details</div>
  </div>
  <div>
    <%= form_with model: [:app, @project], data: { controller: "form", action: "ajax:error->form#onError", remote: true } do |form| %>
      <div class="form-group mt-0">
        <div class="form-group-header">
          <%= form.label :name, "Project name" %>
        </div>
        <div class="form-group-body">
          <%= form.text_field :name, class: "form-control", required: true, autocomplete: "off", maxlength: 255 %>
          <%= render Forms::ErrorDisplayComponent.new(error_type: "name") %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :website_url, "Website URL" %>
        </div>
        <div class="form-group-body">
          <%= form.url_field :website_url, class: "form-control", autocomplete: "off", maxlength: 255 %>
          <%= render Forms::ErrorDisplayComponent.new(error_type: "website_url") %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :subdomain %>
        </div>
        <div class="form-group-body">
          <%= form.text_field :subdomain, class: "form-control", required: true, autocomplete: "off", maxlength: 63 %>
          <%= render Forms::ErrorDisplayComponent.new(error_type: "subdomain") %>
        </div>
      </div>
      <div>
        <%= form.submit "Save changes", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>