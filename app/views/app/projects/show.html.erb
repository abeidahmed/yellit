<%= render PageHeads::WithMultiActionComponent.new do |component| %>
  <% component.with(:header) do %>
    <h1 class="h3">Applog space's changelogs</h1>
  <% end %>
  <% component.with(:actions) do %>
    <a href="#" class="btn d-none d-md-block">
      <%= octicon "link-external" %>
      <span>View posts</span>
    </a>
    <button class="btn ml-2 d-none d-md-block">Filters</button>
    <div class="mt-2 mt-sm-0 d-flex">
      <details class="dropdown details-reset details-overlay d-inline-block d-md-none">
        <summary class="btn" aria-haspopup="true">
          <%= octicon "kebab-horizontal" %>
        </summary>
        <ul class="dropdown-menu dropdown-menu-se">
          <li><a class="dropdown-item" href="#url">View post</a></li>
          <li><a class="dropdown-item" href="#url">Filters</a></li>
        </ul>
      </details>
      <a href="#" class="btn btn-primary ml-2">New post</a>
    </div>
  <% end %>
<% end %>
