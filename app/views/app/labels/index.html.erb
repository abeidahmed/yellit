<%= render Containers::SettingComponent.new(project: @project) do |component| %>
  <% component.with(:body) do %>
    <div data-controller="toggle" data-toggle-attribute-value="hidden" class="mb-3">
      <%= render "box_header" %>
      <div data-toggle-target="content" class="Box p-3 bg-gray" hidden>
        <%= render "form", model: [:app, @project, Label.new], dom_id: Label.new %>
      </div>
    </div>
    <div id="label-list" class="Box">
      <div class="Box-header">
        <h3 class="Box-title"><%= pluralize(@labels.size, "label") %></h3>
      </div>
      <%= render "label", labels: @labels %>
    </div>
  <% end %>
<% end %>