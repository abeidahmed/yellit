<div class="subnav d-flex flex-column flex-sm-row">
  <div class="subnav-search ml-0 col-12 col-sm-6 col-lg-5">
    <%= text_field_tag "search",
      params[:query],
      class: "form-control subnav-search-input width-full",
      data: {
        controller: "search",
        action: "search#observeField",
        search_url_value: app_project_filter_labels_path(project),
        search_key_value: "query",
        search_target_value: "project-label-list"
      },
      placeholder: "Search labels by name",
      aria: { label: "Search labels by name" },
      autocomplete: "off"
    %>
    <%= octicon "search", class: "subnav-search-icon" %>
  </div>
  <div class="mt-2 mt-sm-0 col-sm-6 col-lg-7 d-sm-flex flex-justify-end">
    <button type="button" data-action="click->toggle#toggle" class="btn btn-primary">New label</button>
  </div>
</div>