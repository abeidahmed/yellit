<%= render Containers::FocussedComponent.new(title: "Sign in to yellit") do |component| %>
  <% component.with(:body) do %>
    <%= form_with url: sessions_path, data: { controller: "form", action: "turbo:submit-end->form#onError" } do |form| %>
      <div class="form-group mt-0">
        <div class="form-group-header">
          <%= form.label :email_address %>
        </div>
        <div class="form-group-body">
          <%= form.email_field :email_address, class: "form-control", required: true, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header d-flex flex-items-center flex-justify-between">
          <%= form.label :password %>
          <a href="#" class="h5">Forgot password?</a>
        </div>
        <div class="form-group-body">
          <%= form.password_field :password, class: "form-control", required: true %>
        </div>
      </div>
      <%= render Forms::ErrorDisplayComponent.new(error_type: "invalid") %>
      <div>
        <%= form.submit "Sign in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  <% end %>
  <% component.with(:footer) do %>
    Don't have an account? <%= link_to "Sign up", new_user_path %>
  <% end %>
<% end %>